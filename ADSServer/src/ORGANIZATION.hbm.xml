<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="hibernate_java_files.ORGANIZATION" table="ORGANIZATION">
      <meta attribute="class-description">
         This class contains the organization details. 
      </meta>
      <id name="ORG_ID" column="ORG_ID" type="int">
         <generator class="sequence">
            <param name="sequence">SEQUENCE1</param>
          </generator>
      </id>
    
    <!--   <property name="ORG_ID" column="ORG_ID" type="string"/> --> 
      <property name="ORG_NAME" column="ORG_NAME" type="string"/>
      <property name="ORG_TYPE" column="ORG_TYPE" type="string"/>
      <property name="TOTAL_EMPLOYEE" column="TOTAL_EMPLOYEE" type="int"/>
      <property name="ORG_GOALS" column="ORG_GOALS" type="string"/>
      <property name="ORG_DETAILS" column="ORG_DETAILS" type="string"/>
      <property name="ORG_STATUS" column="ORG_STATUS" type="string"/>
      <property name="ORG_PHONE" column="ORG_PHONE" type="string"/>
      <property name="ORG_WEBSITE" column="ORG_WEBSITE" type="string"/>
      <property name="USER_ID" column="USER_ID" type="string"/>
      <property name="ORG_ADDRESS" column="ORG_ADDRESS" type="string"/>
      
   </class>
</hibernate-mapping>